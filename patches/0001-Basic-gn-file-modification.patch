---
 .gn      | 3 +++
 BUILD.gn | 4 ++++
 DEPS     | 5 +++++
 3 files changed, 12 insertions(+)

diff --git a/.gn b/.gn
index 44a11ec90ec9b..9b31f73540b45 100644
--- a/.gn
+++ b/.gn
@@ -3,6 +3,7 @@
 # file, run "gn help dotfile" at the command line.
 
 import("//build/dotfile_settings.gni")
+import("//radium/dotfile_settings.gni")
 import("//third_party/angle/dotfile_settings.gni")
 
 # The location of the build configuration file.
@@ -173,3 +174,5 @@ exec_script_whitelist =
       "//tools/grit/grit_rule.gni",
       "//tools/gritsettings/BUILD.gn",
     ]
+
+exec_script_whitelist += radium_dotfile_settings.exec_script_whitelist
diff --git a/BUILD.gn b/BUILD.gn
index d91ef0419d702..2b60eb3d3393e 100644
--- a/BUILD.gn
+++ b/BUILD.gn
@@ -879,6 +879,10 @@ group("gn_all") {
   if (checkout_src_internal) {
     deps += [ "//internal:all" ]
   }
+
+  if (checkout_radium) {
+    deps += [ "//radium:all" ]
+  }
 }
 
 # All Rust targets. This is provided for convenience while developing Rust to
diff --git a/DEPS b/DEPS
index c26d88da92db2..bbdd17394d08c 100644
--- a/DEPS
+++ b/DEPS
@@ -50,6 +50,7 @@ gclient_gn_args = [
   'cros_boards',
   'cros_boards_with_qemu_images',
   'generate_location_tags',
+  'checkout_radium',
 ]
 
 
@@ -4688,6 +4689,10 @@ deps = {
         'e4bd19f95afa6483a54906c2a3e5d329d2d81690',
       'condition': 'checkout_src_internal',
   },
+  'src/radium': {
+      'url': 'https://github.com/liuwd8/radium.git' + '@' + 'unmanaged',
+      'condition': 'checkout_radium',
+  },
 }
 
 
